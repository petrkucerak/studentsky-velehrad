---
interface Props {
  title: string;
}

import BaseHead from "../components/BaseHead.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="cs">
  <BaseHead title={title} />
  <body
    class="dark:bg-black dark:text-white flex flex-row justify-center shadow-xl"
  >
    <div class="min-h-screen flex flex-col justify-between">
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>
